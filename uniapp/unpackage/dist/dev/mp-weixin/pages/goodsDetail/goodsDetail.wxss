@font-face {
  font-family: 'iconfont';  /* Project id 2796436 */
  src: url('https://at.alicdn.com/t/c/font_2796436_3dspecc21di.woff2?t=1677844162129') format('woff2'),
       url('https://at.alicdn.com/t/c/font_2796436_3dspecc21di.woff?t=1677844162129') format('woff'),
       url('https://at.alicdn.com/t/c/font_2796436_3dspecc21di.ttf?t=1677844162129') format('truetype');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-minus-circle:before {
  content: "\e821";
}
.icon-plus-circle:before {
  content: "\e822";
}
.icon-order:before {
  content: "\e713";
}
.icon-date:before {
  content: "\e6e0";
}
.icon-medicinebox:before {
  content: "\e7cd";
}
.icon-loading:before {
  content: "\e891";
}
.icon-add:before {
  content: "\e681";
}
.icon-down:before {
  content: "\eb0a";
}
.icon-up:before {
  content: "\eb0b";
}
.count {
	flex-flow: row;
	justify-content: flex-end;
	display: flex;
}
.saveButton {
	width: 100%;
	position:fixed;
	bottom: 0;
}
image {
	width: 100%;
	height: 400rpx;
}
.price {
	font-size: 35rpx;
	color: $shop-color;
	line-height: 80rpx;
}
text:nth-child(2) {
	font-size: 30rpx;
	color: #ccc;
	text-decoration: line-through;
	margin-left: 20rpx;
}
.goods_price {
	font-size: 32rpx;
	line-height: 60rpx;
}
.box1 {
	padding: 10px;
}
.line {
	width: 750rpx;
	height: 10rpx;
	background: #eee;
}
.box2 {
	padding: 0 10px;
	font-size: 32rpx;
	line-height: 70rpx;
}
.tit {
	font-size: 32rpx;
	padding-left: 10px;
	border-bottom: 1px solid #eee;
	line-height: 70rpx;
}
.content {
	font-size: 28rpx;
	padding: 10px;
	line-height: 50rpx;
}

